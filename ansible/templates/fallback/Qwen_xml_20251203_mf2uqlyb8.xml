<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
  <version>6.4</version>
  <templates>
    <template>
      <template>Template OS Linux</template>
      <name>Template OS Linux</name>
      <groups>
        <group>
          <name>Templates/Operating systems</name>
        </group>
      </groups>
      <applications>
        <application>
          <name>CPU</name>
        </application>
        <application>
          <name>Memory</name>
        </application>
        <application>
          <name>Disk space</name>
        </application>
      </applications>
      <items>
        <item>
          <name>CPU load</name>
          <key>system.cpu.load[all,avg1]</key>
          <delay>1m</delay>
          <history>7d</history>
          <trends>365d</trends>
          <value_type>FLOAT</value_type>
          <applications>
            <application>
              <name>CPU</name>
            </application>
          </applications>
        </item>
        <item>
          <name>Memory utilization</name>
          <key>vm.memory.size[pused]</key>
          <delay>1m</delay>
          <history>7d</history>
          <trends>365d</trends>
          <value_type>FLOAT</value_type>
          <applications>
            <application>
              <name>Memory</name>
            </application>
          </applications>
        </item>
      </items>
    </template>
  </templates>
</zabbix_export>